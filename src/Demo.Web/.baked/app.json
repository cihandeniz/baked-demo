{
  "plugins": [
    {
      "expirationInMinutes": 60,
      "basePath": "./runtime/plugins/",
      "name": "cacheApplication",
      "resolver": "MetaUrl"
    },
    {
      "expirationInMinutes": 60,
      "basePath": "./runtime/plugins/",
      "name": "cacheUser",
      "resolver": "MetaUrl"
    },
    {
      "handlers": [
        {
          "statusCode": 401,
          "behavior": "Redirect",
          "behaviorArgument": {
            "type": "Computed",
            "composable": "useLoginRedirect"
          },
          "order": 0
        },
        {
          "statusCode": 400,
          "behavior": "Alert",
          "order": 0
        },
        {
          "behavior": "Page",
          "order": 0
        }
      ],
      "defaultAlertTitle": "Unexpected Error",
      "defaultAlertMessage": "Please contact system administrator",
      "basePath": "./runtime/plugins/",
      "name": "errorHandling",
      "resolver": "MetaUrl"
    },
    {
      "supportedLanguages": [
        {
          "code": "en",
          "name": "English"
        }
      ],
      "basePath": "./runtime/plugins/",
      "name": "localization",
      "resolver": "MetaUrl"
    }
  ],
  "error": {
    "type": "ErrorPage",
    "schema": {
      "errorInfos": {
        "403": {
          "title": "Access Denied",
          "message": "You do not have the permission to view the address or data specified.",
          "showSafeLinks": true
        },
        "404": {
          "title": "Page Not Found",
          "message": "The page you want to view is either deleted or outdated.",
          "showSafeLinks": true
        },
        "500": {
          "title": "Unexpected Error",
          "message": "Please contact system administrator."
        },
        "999": {
          "title": "Application Error",
          "message": "Please contact system administrator."
        }
      },
      "footerInfo": "If you cannot reach the page you want please contact the system administrator",
      "safeLinks": [
        {
          "type": "CardLink",
          "schema": {
            "route": "/",
            "icon": "pi pi-home",
            "title": "Home"
          }
        },
        {
          "type": "CardLink",
          "schema": {
            "route": "/report/monthly-progress",
            "icon": "pi pi-arrow-right",
            "title": "Monthly Progress",
            "description": "Shows current month's progress report"
          }
        }
      ],
      "safeLinksMessage": "Try the links from the menu below to view the page you want to access:"
    },
    "data": {
      "type": "Computed",
      "composable": "useNuxtError"
    }
  },
  "i18n": {
    "defaultLanguage": {
      "code": "en",
      "name": "English"
    },
    "supportedLanguages": [
      {
        "code": "en",
        "name": "English"
      }
    ]
  }
}